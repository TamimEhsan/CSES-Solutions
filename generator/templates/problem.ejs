<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h1 class="text-dark"><%= problem.name %></h1>
        <div class="d-flex align-items-center flex-wrap gap-3 mt-2">
            <div class="problem-tags">
                <% problem.tags.forEach(tag => { %>
                    <span class="tag"><%= tag %></span>
                <% }); %>
            </div>
            <a href="<%= problem.link %>" target="_blank" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-external-link-alt me-1"></i>View Original
            </a>
        </div>
    </div>
    <a href="../index.html" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Back to <%= topic.name %>
    </a>
</div>

<div class="card">
    <div class="card-header p-0">
        <ul class="nav nav-tabs card-header-tabs" id="problemTabs" role="tablist">
            <% let activeSet = false; %>
            <% if (content.description) { %>
            <li class="nav-item" role="presentation">
                <button class="nav-link <%= !activeSet ? (activeSet = true, 'active') : '' %>" 
                        id="description-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#description" 
                        type="button" 
                        role="tab" 
                        aria-controls="description" 
                        aria-selected="<%= !activeSet ? 'true' : 'false' %>">
                    <i class="fas fa-info-circle me-1"></i>
                    Description
                </button>
            </li>
            <% } %>
            <% if (content.hints) { %>
            <li class="nav-item" role="presentation">
                <button class="nav-link <%= !activeSet ? (activeSet = true, 'active') : '' %>" 
                        id="hints-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#hints" 
                        type="button" 
                        role="tab" 
                        aria-controls="hints" 
                        aria-selected="<%= !activeSet ? 'true' : 'false' %>">
                    <i class="fas fa-lightbulb me-1"></i>
                    Hints
                </button>
            </li>
            <% } %>
            <% if (content.solution) { %>
            <li class="nav-item" role="presentation">
                <button class="nav-link <%= !activeSet ? (activeSet = true, 'active') : '' %>" 
                        id="solution-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#solution" 
                        type="button" 
                        role="tab" 
                        aria-controls="solution" 
                        aria-selected="<%= !activeSet ? 'true' : 'false' %>">
                    <i class="fas fa-check-circle me-1"></i>
                    Solution
                </button>
            </li>
            <% } %>
            <% if (content.code) { %>
            <li class="nav-item" role="presentation">
                <button class="nav-link <%= !activeSet ? (activeSet = true, 'active') : '' %>" 
                        id="code-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#code" 
                        type="button" 
                        role="tab" 
                        aria-controls="code" 
                        aria-selected="<%= !activeSet ? 'true' : 'false' %>">
                    <i class="fas fa-code me-1"></i>
                    Code
                </button>
            </li>
            <% } %>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="problemTabContent">
            <% activeSet = false; %>
            <% if (content.description) { %>
            <div class="tab-pane fade <%= !activeSet ? (activeSet = true, 'show active') : '' %>" 
                 id="description" 
                 role="tabpanel" 
                 aria-labelledby="description-tab">
                <div class="markdown-content">
                    <%- content.description %>
                </div>
            </div>
            <% } %>
            <% if (content.hints) { %>
            <div class="tab-pane fade <%= !activeSet ? (activeSet = true, 'show active') : '' %>" 
                 id="hints" 
                 role="tabpanel" 
                 aria-labelledby="hints-tab">
                <div class="markdown-content">
                    <%- content.hints %>
                </div>
            </div>
            <% } %>
            <% if (content.solution) { %>
            <div class="tab-pane fade <%= !activeSet ? (activeSet = true, 'show active') : '' %>" 
                 id="solution" 
                 role="tabpanel" 
                 aria-labelledby="solution-tab">
                <div class="markdown-content">
                    <%- content.solution %>
                </div>
            </div>
            <% } %>
            <% if (content.code) { %>
            <div class="tab-pane fade <%= !activeSet ? (activeSet = true, 'show active') : '' %>" 
                 id="code" 
                 role="tabpanel" 
                 aria-labelledby="code-tab">
                <div class="markdown-content">
                    <h2>Implementation</h2>
                    <% Object.entries(content.code).forEach(([lang, data]) => { %>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h4><%= lang %></h4>
                                <button class="btn btn-sm btn-outline-secondary" onclick="copyCode(this)">
                                    <i class="fas fa-copy me-1"></i>Copy
                                </button>
                            </div>
                            <pre><code class="language-<%= data.language %>"><%- data.content %></code></pre>
                        </div>
                    <% }); %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>
